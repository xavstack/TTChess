{
  "name": "trash-talk-chess",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.19 <21 || >=22.12 <23"
  },
  "scripts": {
    "predev": "node ./scripts/preflight.mjs",
    "dev": "vite --strictPort --port 5173",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "ports": "lsof -nP -iTCP:5173,5174,5175,5176 -sTCP:LISTEN || true",
    "kill:dev": "pkill -f vite || true && lsof -ti:5173,5174,5175,5176 | xargs -I{} kill -9 {} 2>/dev/null || true"
  },
  "dependencies": {
    "chess.js": "^1.0.0",
    "framer-motion": "^11.16.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vite-plugin-pwa": "^0.20.5",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.15",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^2.1.4"
  }
}
